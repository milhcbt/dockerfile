#!/bin/bash -e


# Configure Zookeeper Variable
ZOOKEEPER_CONF_PORT=${ZOOKEEPER_CONF_PORT:-2181}
ZOOKEEPER_CONF_DATA_DIRS=${ZOOKEEPER_CONF_DATA_DIRS:-"/kafka/zookeeper"}

mkdir -p ${ZOOKEEPER_CONF_DATA_DIRS}

export ZOOKEEPER_PORT=${ZOOKEEPER_CONF_PORT}
export ZOOKEEPER_DATA=${ZOOKEEPER_CONF_DATA_DIRS}


exit 0
